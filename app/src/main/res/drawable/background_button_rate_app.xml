<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
<item>
    <shape android:shape="rectangle" >
        <gradient
            android:startColor="#1C5598"
            android:endColor="#1C5598" />

        <corners android:radius="25dp" />
    </shape>
</item>
<item
    android:bottom="1dp"
    android:left="1dp"
    android:right="1dp"
    android:top="1dp">
    <shape android:shape="rectangle" >
        <corners
            android:radius="24dp" />
        <gradient
            android:startColor="#000000"
            android:endColor="#000000"
            android:angle="90" />
    </shape>
</item>
</layer-list>